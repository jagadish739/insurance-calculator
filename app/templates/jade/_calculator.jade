.calculator
    h1 Kalkulator
    .calculator_inner
        h2 Suma ubezpieczenia
        rzslider(rz-slider-floor="0" rz-slider-ceil="450" rz-slider-translate="translate")
        h2 Ilość rat
        .calculator__inner--installment
            .btn.btn--quantity
                p 1 rata
            .btn.btn--quantity
                p 2 raty
            .btn.btn--quantity
                p 3 raty
            .btn.btn--quantity
                p 4 raty
        h2 Stan
        .calculator__inner--state
            .btn.btn--state
                p brak szkód
            .btn.btn--state
                p wyrządzona szkoda
            p Brak wyboru oznacza nowego klienta bez przeszłości
        .calculator_inner--bottom
            .btn.btn--calculate
                p Oblicz rate
            input(type="text" ng-model="cena")

