.calculator
    h1 Kalkulator
    .calculator_inner
        h2 Suma ubezpieczenia
        .calculator_inner--slider
            rzslider( rz-slider-model="slider.value" rz-slider-options="slider.options")
            hr
        h2 Ilość rat {{test}}
        .calculator_inner--installment
            .btn.btn--quantity
                p 1 rata
            .btn.btn--quantity
                p 2 raty
            .btn.btn--quantity
                p 3 raty
            .btn.btn--quantity
                p 4 raty
        h2 Stan
        .calculator_inner--state
            .btn.btn--state
                p brak szkód
            .btn.btn--state
                p wyrządzona szkoda
            p Brak wyboru oznacza nowego klienta bez przeszłości
        .calculator_inner--bottom
            .btn.btn--calculate
                p Oblicz rate
            input(type="text" ng-model="slider.value | currency : $")

